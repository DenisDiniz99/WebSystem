@model CategoryViewModel;

@{
    ViewData["Title"] = "Nova categoria";
}

<div>
    <form asp-action="Create">
        <label for="name" class="col-form-label" title="Categoria">Nome da categoria</label>
        <input asp-for="Name" class="form-control form-control-sm form-text text-dark" placeholder="Categoria" id="categoria" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <br />
        <input type="submit" class="btn btn-sm btn-success mr-2" title="Cadastrar" />
        <a class="btn btn-sm btn-danger" asp-action="Index">Cancelar</a>
    </form>
</div>
