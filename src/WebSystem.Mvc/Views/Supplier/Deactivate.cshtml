@model SupplierViewModel;

@{
    ViewData["Title"] = "Desativar o fornecedor";
}

<div class="d-flex justify-content-center mt-4">
    <div class="card mx-auto">
        <div class="card-header">
            <h3 class="display-5">Desativação do Fronecedor</h3>
        </div>
        <div class="card-body">
            @{
                if (!Model.Active)
                {
                    <div class="container justify-content-center">
                        <div class="alert alert-primary text-center">
                            <h3>Ops! O fornecedor <strong>@Model.Name</strong> já está INATIVO.</h3>
                            <a class="btn btn-sm btn-danger" asp-action="Index">Voltar</a>
                        </div>
                    </div>
                }
                else
                {
                    <form asp-action="Deactivate">
                        <div class="m-2">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control form-control-sm form-text text-dark" readonly="readonly" />
                        </div>

                        <div class="m-2">
                            <label asp-for="CorporateName" class="form-label"></label>
                            <input asp-for="CorporateName" class="form-control form-control-sm form-text text-dark" readonly="readonly" />
                        </div>

                        <div class="m-2">
                            <label asp-for="Document.Number" class="form-label" title="Documento">Número do documento</label>
                            <input asp-for="Document.Number" class="form-control form-control-sm form-text text-dark" readonly="readonly" />
                        </div>

                        <div class="m-2">
                            <input type="submit" class="btn btn-sm btn-success me-2" title="Desativar" />
                            <a class="btn btn-sm btn-danger" asp-action="Index">Cancelar</a>
                        </div>
                    </form>
                }
            }

        </div>
    </div>
</div>